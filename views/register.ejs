<%- include('template/head') -%>
<div class="container text-center">
  <h1><%=title%></h1>
  <form id="form-register">
    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">name</label>
      <input type="text" id="name" class="col-sm-7 md-form mt-0" required>
    </div>
    <div class="form-group row">
      <label for="user" class="col-sm-2 col-form-label">username</label>
      <input type="text" id="user" pattern="[A-Za-z0-9]+" placeholder="only alphabet & number" class="col-sm-7 md-form mt-0" required>
    </div>
    <div class="form-group row">
      <label for="mail" class="col-sm-2 col-form-label">usermail</label>
      <input type="email" id="mail" class="col-sm-7 md-form mt-0" required>
    </div>
    <div class="form-group row">
      <label for="pwd" class="col-sm-2 col-form-label">password <i class="fa fa-eye see"></i></label>
      <input type="password" id="pwd" class="col-sm-7 md-form mt-0" required>
    </div>
    <input type="hidden" id="csrf" value="<%=token%>">
    <div class="form-group row">
      <button id="action" type="submit" class="btn btn-primary btn-md col-sm-2"><%=title%></button>
    </div>
  </form>
  <div class="form-group row">
    <div id="out" class="col-md-5 mb-2">
    </div>
  </div>
</div>
<%- include('template/foot') -%>